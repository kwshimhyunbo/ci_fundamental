{% extends 'base.twig' %}
{% block link %}
    <title class="ng-isolate-scope">Bitrise - Mobile Continuous Integration Made Easy</title>
    <link rel="stylesheet" media="all" href="/dist/app_detail/app.css">
    <link rel="stylesheet" media="all" href="/dist/app_detail/app.js">
    <link rel="stylesheet" media="all" href="/dist/app_detail/fonts.css">
    <style>
        h1, h2, p, p.size {
            color: #ffffff
        }
    </style>
{% endblock link %}

{% block content %}

    <div class="container" >
        <div class="app-icon" style="background-image: url('{{ app.icon_url }}')"></div>
        {% for app in apps %}
            <h1> {{ app.title }}</h1>
            <h1>v{{ app.version }}</h1>
            <div class="action-container">

            {% if app.platform == 1 %}
                <a class="action-btn" href="{{ app.plist_url }}">Download</a>
             {% elseif app.platform == 2 %}
                <a class="action-btn" href="{{ app.app_url }}" download>Download</a>
                {% endif %}
        </div>
        {% endfor %}

    </div>
{% endblock content %}
